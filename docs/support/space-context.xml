<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- A bean representing a space -->
    <bean id="space" class="com.j_spaces.core.client.SpaceFinder" factory-method="find">
      <!-- JINI search path for the active space with name `space` -->
        <constructor-arg value="jini://*/*/space"/>
    </bean>

    <!-- GigaSpace interface implementation -->
    <bean id="gigaSpace" class="org.springframework.data.xap.spaceclient.SpaceClient">
      <!-- IJSpace instance injection into `SpaceClient` -->
        <property name="space" ref="space"/>
    </bean>

</beans>